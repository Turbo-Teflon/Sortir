{% extends 'base.html.twig' %}

{% block title %}My Outings{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1 class="h4 mb-3">Outings I created</h1>

    {% if sorties is empty %}
    <div class="alert alert-info">
        You don't create any outing yet.
    </div>

    {% else %}
    <ul class="list-group">
        {% for sortie in sorties %}
        <li class="list-group-item d-flex justify-content-between align-items-center">
            <div>
                <div class="fw-semibold">{{ sortie.nom }}</div>
                <div class="text-muted small">
                    {{ sortie.startDateTime ? sortie.startDateTime|date('d/m/Y H:i') : '—' }}
                    {% if sortie.site is defined and sortie.site %} • {{ sortie.site.nom }}{% endif %}
                    {% if sortie.etat is defined and sortie.etat %} • {{ sortie.etat }}{% endif %}
                </div>
            </div>
            <a class="btn btn-sm btn-outline-primary"
               href="{{ path('sortie_detail', { id: sortie.id }) }}">
                Details
            </a>
        </li>
        {% endfor %}
    </ul>
    {% endif %}
</div>
{% endblock %}
