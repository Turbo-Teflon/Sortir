{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}

    <form method="post">
        {% if error %}
            <div class="alert alert-danger">
                Invalid identifiers
            </div>
        {% endif %}

        {% if app.user %}
            <div class="mb-3">
                You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
            </div>
        {% endif %}

        <h1 class="h3 mb-3 font-weight-normal">Login</h1>
        <label for="inputUsername">Email</label>
        <input type="text" name="_username" id="inputUsername" class="form-control" autocomplete="username" pattern="^[^@]+@campus-eni\.fr$"  title="The email must end with @campus-eni.fr" required autofocus>
        <label for="inputPassword">Password</label>
        <input type="password" name="_password" id="inputPassword" class="form-control" autocomplete="current-password" required>
        <input type="hidden" name="_csrf_token" data-controller="csrf-protection" value="{{ csrf_token('authenticate') }}">

        <div class="checkbox mb-3">
            <input type="checkbox" name="_remember_me" id="_remember_me">
            <label for="_remember_me">Remember me</label>
        </div>


        <button class="btn btn-lg btn-primary" type="submit">
            Validate
        </button>
        <p class="mt-3">
            <a href="{{ path('forgot_password') }}">Mot de passe oubli√© ?</a>
        </p>
    </form>

{% endblock %}
