<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}Sortir ENI{% endblock %}</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <link rel="stylesheet" href="{{ asset('css/app.css') }}">
</head>
<body>
<header class="entete position-relative d-flex align-items-center mb-4">
    <img src="{{ asset('images/sortir.svg') }}" alt="Sortir" class="entete__logo">
    <h1 class="ms-3 entete__title">SORTIES AVEC L'ENI</h1>

    <nav class="entete__nav">
        <a href="{{ path('home') }}">Home</a>

        {# Dropdown: All outings (sites dynamiques) #}
        <div id="all-outings-flyout" class="nav-dd">
            <a href="{{ path('sortie_list') }}" class="nav-dd__trigger" aria-haspopup="true" aria-expanded="false">
                All outings
            </a>

            {# boucle + fallback si 'sites' n'est pas défini dans le layout #}
            {% set menuSites = (sites is defined and sites is not empty)
                ? sites
                : ['Niort','Quimper','Nantes','Rennes','Ligne'] %}

            <ul class="nav-dd__menu" role="menu" aria-label="Sites">
                <li><a role="menuitem" href="{{ path('sortie_list', {'site':'all'}) }}">All</a></li>
                {% for s in menuSites %}
                    <li><a role="menuitem" href="{{ path('sortie_list', {'site': s}) }}">{{ s }}</a></li>
                {% endfor %}
            </ul>
        </div>


        {# Deuxième dropdown: Outings (IDs uniques) #}
        <div id="outings-flyout" class="nav-dd">
            <a href="{{ path('sortie_list') }}" class="nav-dd__trigger" aria-haspopup="true" aria-expanded="false">
                Outings
            </a>
            <ul class="nav-dd__menu" role="menu" aria-label="Outings">
                <li><a role="menuitem" href="{{ path('sortie_create') }}">Create Outing</a></li>
                <li><a role="menuitem" href="{{ path('sortie_create') }}">My Outing</a></li> {# TODO: route "mes sorties" #}
            </ul>
        </div>

        <a href="{{ path('modify_profil') }}">Edit profile</a>
        <a href="{{ path('app_login') }}">Login</a>
    </nav>
    <div class="user-info position-absolute top-0 end-0 me-md-5 m-3 d-flex align-items-center">
        {% if app.user %}
            {% if app.user.photo %}
                <img src="{{ asset('images/' ~ app.user.photo) }}"
                     alt="Photo de profil"
                     width="80"
                     class="rounded-circle me-3 shadow">
            {% endif %}
            <h5 class="mb-0">
                <strong>Hello <a href="{{ path('sortie_user_profil', {id: app.user.id}) }}">
                        {{ app.user.pseudo }}
                    </a></strong>
            </h5>
        {% endif %}
    </div>
</header>

{% for label, messages in app.flashes %}
    {% for message in messages %}
        <div class="alert alert-{{ label }} alert-dismissible fade show m-3">
            {{ message }}
        </div>
    {% endfor %}
{% endfor %}

<div class="container mb-5">
    {% block body %}{% endblock %}
</div>

{# JS: gère tous les .nav-dd (tap/mobile) #}
<script>
    (function () {
        const dropdowns = Array.from(document.querySelectorAll('.nav-dd'));
        if (dropdowns.length === 0) return;

        const preferTap = window.matchMedia('(hover: none)').matches;

        function setOpen(wrap, open) {
            wrap.classList.toggle('open', open);
            const trigger = wrap.querySelector('.nav-dd__trigger');
            if (trigger) trigger.setAttribute('aria-expanded', open ? 'true' : 'false');
        }

        function closeAll() {
            dropdowns.forEach(w => setOpen(w, false));
        }

        if (preferTap) {
            dropdowns.forEach(wrap => {
                const trigger = wrap.querySelector('.nav-dd__trigger');
                if (!trigger) return;
                trigger.addEventListener('click', (e) => {
                    e.preventDefault();
                    const isOpen = wrap.classList.contains('open');
                    closeAll();
                    setOpen(wrap, !isOpen);
                });
            });

            document.addEventListener('click', (e) => {
                if (!e.target.closest('.nav-dd')) closeAll();
            });

            document.addEventListener('keydown', (e) => {
                if (e.key === 'Escape') closeAll();
            });
        }
    })();
</script>

</body>
</html>